<h1>
    Usuarios
</h1>

<table>
    <% for (var i in users) { %>
        <tr>
            <td>
                <a href="/users/<%= users[i].id %>" ><%= users[i].displayName %></a>
                <%= users[i].isAdmin ? "(admin)" : "" %>
            </td>
            <td>
                <a href="/users/<%= users[i].id %>/edit" class="button">Editar</a>
            </td>
            <td>
                <a href="/users/<%= users[i].id %>?_method=DELETE"
                   onClick="return confirm('Delete user: <%= users[i].displayName %>');"
                   class="button">Eliminar</a>
            </td>
        </tr>
    <%  } %>
</table>

<a href="/users/new" class="button">Crear un nuevo usuario</a>